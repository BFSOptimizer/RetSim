		<MudTh style="padding-inline-end: 0px;padding-inline-start: 0px;"><MudTableSortLabel SortBy="new Func<EquippableWeapon, object>(x=>x.Stats[StatName.AttackPower])">AP</MudTableSortLabel></MudTh>		
		<MudTh style="padding-inline-end: 0px;padding-inline-start: 0px;"><MudTableSortLabel SortBy="new Func<EquippableWeapon, object>(x=>x.Stats[StatName.Agility])">Agi</MudTableSortLabel></MudTh>		
