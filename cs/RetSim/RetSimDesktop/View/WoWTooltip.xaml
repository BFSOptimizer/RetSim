<UserControl x:Class="RetSimDesktop.WoWTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetSimDesktop.View"
             d:DataContext="{d:DesignInstance viewmodel:RetSimUIModel}"
             xmlns:viewmodel="clr-namespace:RetSimDesktop.ViewModel"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Popup Name="TooltipPopUp" IsOpen="False" Placement="Relative" AllowsTransparency="True" HorizontalOffset="0" VerticalOffset="0" PlacementTarget="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget}">
        <Grid>
            <wv2:WebView2 Width="500" Height="400" Name="Browser" Source="https://github.com/TheSorm/RetSim" ></wv2:WebView2>
        </Grid>
    </Popup>
</UserControl>
